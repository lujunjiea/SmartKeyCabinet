<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_rt_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_button_white"
    android:padding="@dimen/dp_15">

    <ImageView
        android:id="@+id/iv_open_box_status"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/img_open_box_success"
        android:layout_centerHorizontal="true">
    </ImageView>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/str_open_success"
        android:textColor="@color/bg_textColor"
        android:textSize="@dimen/sp_12"
        android:layout_below="@+id/iv_open_box_status"
        android:layout_margin="@dimen/dp_10"/>

</RelativeLayout>